{
    "name": "dotmarn/laravel-error-views",
    "description": "A set of customised error pages/screens designed using the TailwindCSS for use in Laravel projects.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/dotmarn/laravel-error-views",
    "authors": [
        {
            "name": "Ridwan Kasim",
            "email": "kasimsheyi20@gmail.com",
            "role": "Owner"
        }
    ],
    "keywords": [
        "Laravel", 
        "TailwindCSS", 
        "Laravel Error Views", 
        "Custom Error Screens", 
        "TALL", 
        "Laravel Framework"
    ],
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^8.0|^9.0|^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Dotman\\LaravelErrorViews\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dotman\\LaravelErrorViews\\LaravelErrorViewsServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}